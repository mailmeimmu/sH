{
  "expo": {
    "name": "Smart Home By Nafisa Tabasum",
    "slug": "fawzino-iot",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#111827"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to control your smart home.",
        "NSMicrophoneUsageDescription": "This app uses the microphone to listen for your voice commands.",
        "NSCameraUsageDescription": "Camera access is required for face recognition during login and registration."
      },
      "bundleIdentifier": "com.anonymous.fawzinoiot"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#111827"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.anonymous.fawzinoiot"
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-local-authentication",
      "expo-secure-store",
      "expo-speech-recognition",
      "react-native-vision-camera",
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "$(PRODUCT_NAME) needs access to your Camera for face recognition.",
          "enableMicrophonePermission": false
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "b9af1849-5e88-4d45-823f-3207cf95a91e"
      }
    }
  }
}
